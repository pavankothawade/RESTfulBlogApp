<% include ./partials/header %>


<% blogs.forEach(function(blog){ %>
<div>
	
	<h2><%= blog.title %></h2>
	<img src="<%= blog.image %>">
	<h4><%= blog.created %></h4>
	<p><%= blog.body.substring(0, 100)%>...</p>
	
	<a href="/blogs/<%= blog._id%>">Read More</a>
	<a href="/blogs/<%= blog._id%>/edit">Update</a>
</div>
	
<%})%>
<% include ./partials/footer %>
